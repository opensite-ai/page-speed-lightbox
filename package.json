{
  "name": "@page-speed/lightbox",
  "version": "0.1.3",
  "description": "High-performance, feature-rich lightbox for OpenSite platform",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "./hooks": {
      "import": "./dist/hooks/index.js",
      "types": "./dist/hooks/index.d.ts"
    },
    "./renderers": {
      "import": "./dist/renderers/index.js",
      "types": "./dist/renderers/index.d.ts"
    },
    "./components": {
      "import": "./dist/components/index.js",
      "types": "./dist/components/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc --emitDeclarationOnly && pnpm run build:esm && pnpm run build:cjs",
    "build:esm": "esbuild src/index.ts src/core/index.ts src/hooks/index.ts src/renderers/index.ts src/components/index.ts --bundle --platform=browser --format=esm --outdir=dist --outbase=src --external:react --external:react-dom",
    "build:cjs": "esbuild src/index.ts --bundle --platform=browser --format=cjs --outfile=dist/index.cjs --external:react --external:react-dom",
    "bundle-analyze": "esbuild src/index.ts --bundle --analyze --outfile=/dev/null --external:react --external:react-dom",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "tsc --noEmit",
    "type-check": "tsc --noEmit",
    "prepare": "pnpm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "keywords": [
    "lightbox",
    "shadcn",
    "ui",
    "tailwind",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/opensite-ai/page-speed-lightbox"
  },
  "bugs": {
    "url": "https://github.com/opensite-ai/page-speed-lightbox/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "esbuild": "^0.27.2",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@page-speed/img": "^0.4.3",
    "@page-speed/pdf-viewer": "0.1.1"
  }
}
